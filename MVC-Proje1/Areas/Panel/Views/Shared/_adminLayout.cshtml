
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Panel</title>
    <script src="~/Areas/Panel/Content/dashbord/dist/js/jquery.min.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/dist/js/popper.min.js"></script>
    <link href="~/Areas/Panel/Content/dashbord/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/bower_components/Ionicons/css/ionicons.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/dist/css/AdminLTE.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/dist/css/main.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/dist/css/skins/_all-skins.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/dist/css/skins/skin-blue.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic" />

</head>

<body class="hold-transition skin-blue sidebar-mini">
    <div class="wrapper">
        <header class="main-header">
            <a href="/panel" class="logo">
                <span class="logo-mini"><b></b>AP</span>
                <span class="logo-lg"><b>ADMİN PANEL</b></span>
            </a>
            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="push-menu" role="button">
                    <span class="sr-only">Toggle navigation</span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li><a href="/">@Request.Url.Host</a></li>
                    </ul>
                </div>
            </nav>
        </header>
        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel" style="overflow:initial; padding-bottom:40px;">
                    <div class="pull-left image">
                        <img src="/Areas/Panel/Content/Images/user.png" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>
                            <asp:Label ID="lblusername" runat="server" Text=""></asp:Label>
                        </p>
                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <ul class="sidebar-menu" data-widget="tree">
                    <li class="header">ANA MENÜ</li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-file-o"></i> <span>İçerik Yönetimi</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Panel/Pagecategories"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>  Kategoriler</a></li>
                            <li><a href="/Panel/Pages"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>  Sayfalar</a></li>

                        </ul>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-file-o"></i> <span>Ürün Yönetimi</span>
                            <span class="pull-right-container">
                                <i class="fa fa-angle-left pull-right"></i>
                            </span>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="/Panel/ProductCategories"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>  Kategoriler</a></li>
                            <li><a href="/Panel/Products"><i class="fa fa-long-arrow-right" aria-hidden="true"></i>  Ürünler</a></li>
                        </ul>
                    </li>
                    <li><a href="/panel/sliders"><i class="fa fa-exchange" aria-hidden="true"></i> <span>Slider</span></a></li>

                    <li><a href="/panel/users"><i class="fa fa-user"></i> <span>Kullanıcı Yönetimi</span></a></li>
                    <li><a href="/Panel/Contacts"><i class="fa fa-location-arrow" aria-hidden="true"></i> <span>İletişim Bilgileri</span></a></li>

                    <li><a href="/panel/socials"><i class="fa fa-share-square-o"></i> <span>Sosyal Medya Yönetimi</span> </a></li>

                    <li><a href="/Panel/UserLogin/Logout"><i class="fa fa-sign-out" aria-hidden="true"></i> <span>Çıkış yap</span></a></li>
                </ul>
            </section>
        </aside>

        <div class="content-wrapper" style="">
            <div class="row">
                <section class="col-lg-12 connectedSortable ui-sortable">
                    <div style="margin:12px;">
                        <div class="box box-primary">
                            <div class="box-body">
                                @RenderBody()

                            </div>

                        </div>
                    </div>
                </section>
            </div>
        </div>

        <footer class="main-footer">
            <div class="pull-right hidden-xs">
                <b>Version</b> 2.4.0
            </div>
            <strong>Copyright &copy; 2021 Ali Karakaya</strong> All rights
            reserved.
        </footer>

        <div class="control-sidebar-bg"></div>
    </div>

    @*************************************SCRIPTS*****************************************************************@

    <script src="~/Areas/Panel/Content/dashbord/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/bower_components/fastclick/lib/fastclick.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/dist/js/adminlte.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/dist/js/pages/dashboard.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/dist/js/demo.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/bower_components/bootstrap/js/tab.js"></script>
    <script src="~/Areas/Panel/Content/dashbord/bower_components/bootstrap/js/collapse.js"></script>

</body>

</html>

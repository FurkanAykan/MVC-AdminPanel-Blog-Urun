@model IEnumerable<EntityLayer.Entity.ProductCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_adminLayout.cshtml";
}

<h2>Ürün Kategoriler</h2>

<p>
    <a href="/Panel/ProductCategories/Create" class="btn btn-primary"><i class="fa fa-plus-square-o"></i>  Yeni Ekle</a>
</p>
<table class="table">
    <tr>
        <th>
            Resim
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.IsAvtive)
        </th>
        <th>Düzenle</th>
        <th>Sil</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                <img src="@item.ImageUrl" style="max-width:60px"; @*alt="@item.CategoryName"*@ />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @if (item.IsAvtive==true)
                {
                    <div class="aktif"></div>
                }
                else
                {
                    <div class="pasif"></div>
                }
            </td>
            <td>
                @Html.ActionLink("Düzenle", "Edit", new { id = item.CategoryID }, new {@class="btn btn-warning"}) 
              
            </td>
            <td>
                @Html.ActionLink("Sil", "Delete", new { id = item.CategoryID }, new { @class = "btn btn-danger" })

            </td>
        </tr>
    }

</table>

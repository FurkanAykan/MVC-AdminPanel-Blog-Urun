@model List<EntityLayer.Entity.PageCategory>
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Panel/Views/Shared/_adminLayout.cshtml";
}

<h2>Kategori Listesi</h2>
<br />
<a href="/Panel/Pagecategories/Create" class="btn btn-primary"><i class="fa fa-plus-square"></i>  Create</a>
<br />
<br />
<div>
    <table class="table table-bordered">
        <tr>
            <th>Resim</th>
            <th>Kategori Adı</th>
            <th>Durum</th>
            <th>Düzenle</th>
            <th>Sil</th>

        </tr>
        @foreach (var ktg in Model)
        {
            <tr>
                <td><img src="@ktg.ImageUrl" style="max-width:60px;" /></td>
                <td>@ktg.CategoryName</td>
                <td>
                    @if (ktg.IsActive == true)
                    {
                        <div class="aktif"></div>
                    }
                    else
                    {
                        <div class="pasif"></div>
                    }
                </td>
                <td><a href="/Panel/Pagecategories/Edit/@ktg.CategoryID" class="btn btn-warning"><i class="fa fa-edit"></i>  Düzenle</a></td>
                <td><a href="/Panel/Pagecategories/Delete/@ktg.CategoryID" class="btn btn-danger"><i class="fa fa-trash-o"></i>  Sil</a></td>

            </tr>



        }
    </table>
    @*<style>
            .table tr td, .table tr,th{
                padding:6px!important;
            }
        </style>*@
</div>



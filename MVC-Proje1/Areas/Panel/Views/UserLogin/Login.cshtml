@model EntityLayer.Entity.User

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Areas/Panel/Content/dashbord/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/bower_components/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Areas/Panel/Content/dashbord/dist/css/LoginCss.css" rel="stylesheet" />
    <title>Giriş Ekranı</title>
</head>
<body>
    <div>

        <div class="login-panel">
            <div class="login-content">
                <div class="login-body">
                    <h1><i class="fa fa-lock"></i>  Kullanıcı Girişi</h1>

                    <form action="/Panel/UserLogin/Login" method="post">

                        <div class="form-group">

                            <input type="text" name="email" placeholder="email" class="form-control" value="@Model.Email" />
                        </div>

                        <div class="form-group">
                            <input type="password" name="password" placeholder="şifre" class="form-control" value="@Model.Password" />
                        </div>
                        <span class="text-danger">
                            @ViewBag.hata
                        </span>
                        <br />
                    
                        <div>
                            <div class="col-md-6" style="text-align:left;">
                                <a href="/Panel/UserLogin/SendPassword" class="btn btn-danger"><i class="fa fa-key"></i>  Şifremi Unuttum</a>
                            </div>
                            <div class="col-md-6" style="text-align:right;">
                                @*<a href="/panel/userlogin/login" class="btn btn-primary"><i class="fa fa-sign-in"></i>  Giriş Yap</a>*@
                                <button type="submit" class="btn btn-primary"><i class="fa fa-sign-in"></i> <a href="/panel/userlogin"></a> Giriş Yap</button>
                            </div>

                        </div>

                    </form>

                   



                </div>
            </div>

        </div>

    </div>

</body>
</html>
